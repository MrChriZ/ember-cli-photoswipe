{{#if hasBlock}}
  {{#if items}}
    {{#each items as |item index|}}
      <a
        data-width={{item.w}}
        data-height={{item.h}}
        {{action "launchGallery" item}}
      >
        {{yield item index}}
      </a>
    {{/each}}
  {{else}}
    {{! For backward compatability of block usage up to ember-cli-photoswipe versions 1.1.0 }}
    {{yield}}
  {{/if}}
{{/if}}
{{#unless options.destination}}
  {{pswp-element options=options}}
{{/unless}}
{{#if options.destination}}
  <div>
    {{#in-element _container}}
      {{pswp-element options=options}}
    {{/in-element}}
  </div>
{{/if}}